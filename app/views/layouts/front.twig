<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ title }}</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap');

        :root {
            --bg: #f5f7fd;
            --card: #ffffff;
            --text: #0f1c2e;
            --muted: #657489;
            --primary: #4a3cf1;
            --primary-dark: #3426c7;
            --border: #e5e9f3;
            --shadow: 0 16px 40px rgba(18, 30, 52, 0.12);
            --radius: 18px;
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: "Space Grotesk", "Segoe UI", Arial, sans-serif;
            background: var(--bg);
            color: var(--text);
        }

        a {
            text-decoration: none;
            color: inherit;
        }

        .topbar {
            background: #fff;
            border-bottom: 1px solid var(--border);
            padding: 18px 36px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .brand {
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        .brand strong {
            color: var(--primary);
            font-size: 20px;
        }

        .brand span {
            color: var(--muted);
            font-size: 13px;
        }

        .user-box {
            display: flex;
            align-items: center;
            gap: 14px;
            color: var(--muted);
            font-size: 13px;
        }

        .logout {
            border: 1px solid var(--border);
            background: transparent;
            border-radius: 12px;
            padding: 8px 14px;
            font-weight: 600;
            cursor: pointer;
        }

        .nav-link {
            font-weight: 600;
            color: var(--primary);
        }

        .page {
            max-width: 1200px;
            margin: 0 auto;
            padding: 32px 36px 60px;
        }

        .hero h1 {
            font-size: 32px;
            margin-bottom: 6px;
        }

        .hero p {
            color: var(--muted);
            margin-bottom: 28px;
        }

        .search-bar {
            display: grid;
            grid-template-columns: 1fr auto;
            gap: 12px;
            background: #fff;
            border-radius: 18px;
            border: 1px solid var(--border);
            padding: 14px;
            box-shadow: var(--shadow);
        }

        .search-bar input {
            border: none;
            outline: none;
            font-size: 15px;
        }

        .filter-btn {
            background: transparent;
            border: 1px solid var(--border);
            padding: 10px 14px;
            border-radius: 12px;
            font-weight: 600;
            cursor: pointer;
        }

        .offers-grid {
            margin-top: 26px;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
            gap: 20px;
        }

        .offer-card {
            background: #fff;
            border-radius: 18px;
            border: 1px solid var(--border);
            overflow: hidden;
            box-shadow: var(--shadow);
            display: grid;
        }

        .offer-card img {
            width: 100%;
            height: 160px;
            object-fit: cover;
            background: #edf0f8;
        }

        .offer-body {
            padding: 16px 18px 20px;
        }

        .offer-body h3 {
            margin: 6px 0 8px;
            font-size: 18px;
        }

        .pill {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 6px 12px;
            border-radius: 999px;
            font-size: 12px;
            font-weight: 600;
            background: #eef2ff;
            color: #3d3df1;
        }

        .offer-meta {
            color: var(--muted);
            font-size: 13px;
            display: grid;
            gap: 6px;
            margin-top: 10px;
        }

        .offer-footer {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-top: 12px;
        }

        .details-link {
            color: var(--primary);
            font-weight: 600;
        }

        .muted {
            color: var(--muted);
        }

        .panel,
        .table-card {
            background: #fff;
            border-radius: var(--radius);
            padding: 18px;
            box-shadow: var(--shadow);
            border: 1px solid var(--border);
        }

        .field {
            display: flex;
            flex-direction: column;
            gap: 8px;
            margin: 12px 0;
        }

        .field label {
            font-weight: 600;
            font-size: 14px;
        }

        .field-input {
            border: 1px solid var(--border);
            border-radius: 12px;
            padding: 10px 12px;
            font-size: 14px;
            outline: none;
        }

        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            padding: 10px 16px;
            border-radius: 12px;
            border: none;
            cursor: pointer;
            font-weight: 600;
        }

        .btn.primary {
            background: var(--primary);
            color: #fff;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            font-size: 14px;
        }

        .table th,
        .table td {
            text-align: left;
            padding: 12px 8px;
            border-bottom: 1px solid var(--border);
        }

        .badge {
            padding: 6px 12px;
            border-radius: 999px;
            font-size: 12px;
            background: #eef2ff;
            color: #3d3df1;
            font-weight: 600;
        }

        @media (max-width: 720px) {
            .topbar {
                flex-direction: column;
                align-items: flex-start;
                gap: 14px;
            }

            .search-bar {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="topbar">
        <div class="brand">
            <strong>iYouCode</strong>
            <span>Job Dating Platform</span>
        </div>
        <div class="user-box">
            <div>Connecte en tant que <strong>{{ student_name|default('Etudiant YouCode') }}</strong></div>
            <a class="nav-link" href="/candidatures">Mes candidatures</a>
            <form method="post" action="/logout">
                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                <button class="logout" type="submit">Deconnexion</button>
            </form>
        </div>
    </div>

    <main class="page">
        {% block content %}{% endblock %}
    </main>
</body>
</html>
