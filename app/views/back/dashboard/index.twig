{# templates/admin/dashboard.twig #}
{% extends "admin/layout.twig" %}

{% block content %}
<div class="container-fluid mt-4">
    <h2 class="mb-4">لوحة التحكم (Dashboard)</h2>

    <div class="row mb-5">
        <div class="col-md-3">
            <div class="card bg-primary text-white shadow">
                <div class="card-body">
                    <h5>إعلانات نشطة</h5>
                    <p class="display-6">{{ stats.active_annonces }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-secondary text-white shadow">
                <div class="card-body">
                    <h5>إعلانات مؤرشفة</h5>
                    <p class="display-6">{{ stats.archived_annonces }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white shadow">
                <div class="card-body">
                    <h5>شركات شريكة</h5>
                    <p class="display-6">{{ stats.total_entreprises }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white shadow">
                <div class="card-body">
                    <h5>طلاب مسجلين</h5>
                    <p class="display-6">{{ stats.total_apprenants }}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">آخر 3 إعلانات مضافة</h5>
                    <a href="/admin/annonces" class="btn btn-sm btn-outline-light">عرض الكل</a>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>العنوان</th>
                                <th>نوع العقد</th>
                                <th>تاريخ النشر</th>
                                <th>الإجراء</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for annonce in latestAnnonces %}
                            <tr>
                                <td>{{ annonce.titre }}</td>
                                <td><span class="badge bg-secondary">{{ annonce.type_contrat }}</span></td>
                                <td>{{ annonce.created_at|date("d/m/Y") }}</td>
                                <td>
                                    <a href="/admin/annonces/edit/{{ annonce.id }}" class="btn btn-sm btn-warning">تعديل</a>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="4" class="text-center text-muted">لا توجد إعلانات نشطة حالياً.</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a href="/admin/annonces/create" class="btn btn-primary">إضافة إعلان جديد</a>
        <a href="/admin/entreprises/create" class="btn btn-success">إضافة شركة جديدة</a>
    </div>
</div>
{% endblock %}