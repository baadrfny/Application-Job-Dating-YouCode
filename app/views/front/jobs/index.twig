{% extends "layouts/main.twig" %}

{% block title %}Explorer les Offres{% endblock %}

{% block content %}

<!-- HERO -->
<section class="w-full py-16">
  <div class="max-w-screen-2xl mx-auto px-6 text-center">
    <h1 class="text-5xl font-bold mb-4">
      Trouvez votre <span class="text-indigo-600">opportunit√© id√©ale</span>
    </h1>
    <p class="text-lg text-gray-500">
      Explorez les meilleures offres propos√©es par nos partenaires
    </p>
  </div>
</section>

<!-- MAIN LAYOUT -->
<section class="w-full py-16">
  <div class="max-w-screen-2xl mx-auto px-6 grid lg:grid-cols-4 gap-10">

    <!-- FILTERS -->
    <aside class="lg:col-span-1 bg-white rounded-2xl p-6 shadow border">
      <h3 class="font-bold text-lg mb-6">Filtrer les offres</h3>

      <div class="space-y-4">
        <div>
          <input type="text" id="searchInput" placeholder="Titre, entreprise, comp√©tences..."
                 class="w-full px-4 py-3 border rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-600">
          <small class="text-gray-400">‚è±Ô∏è Recherche en temps r√©el</small>
        </div>

        <select id="companyFilter" class="w-full px-4 py-3 border rounded-xl">
          <option value="">Toutes les entreprises</option>
          {% for company in companies %}
            <option value="{{ company.id }}">{{ company.nom }}</option>
          {% endfor %}
        </select>

        <select id="contractFilter" class="w-full px-4 py-3 border rounded-xl">
          <option value="">Tous les contrats</option>
          <option value="CDI">CDI</option>
          <option value="CDD">CDD</option>
          <option value="Stage">Stage</option>
          <option value="Freelance">Freelance</option>
        </select>

        <button id="filterBtn" class="w-full py-3 bg-indigo-600 text-white rounded-xl font-semibold hover:bg-indigo-700 transition">
          Filtrer
        </button>
      </div>
    </aside>

    <!-- OFFERS GRID -->
    <div class="lg:col-span-3">
      <div id="offersContainer" class="grid md:grid-cols-2 xl:grid-cols-2 gap-6">

        {% for offer in offers %}
        <div class="bg-white rounded-2xl p-6 shadow border hover:shadow-xl transition">
          <span class="text-xs bg-indigo-100 text-indigo-600 px-3 py-1 rounded-full">
            {{ offer.type_contrat }}
          </span>

          <h3 class="text-lg font-bold mt-3">{{ offer.titre }}</h3>
          <p class="text-sm text-gray-500">{{ offer.entreprise_nom }}</p>

          <p class="mt-3 text-sm text-gray-600">
            {% if offer.description|length > 100 %}
              {{ offer.description|slice(0,100) }}...
            {% else %}
              {{ offer.description }}
            {% endif %}
          </p>

          <a href="/annonces/show/{{ offer.id }}"
             class="inline-block mt-4 text-indigo-600 font-semibold">
            Voir d√©tails ‚Üí
          </a>
        </div>
        {% else %}
        <div class="col-span-2 text-center py-12 text-gray-500">
          <p class="text-lg">üì≠ Aucune offre disponible</p>
        </div>
        {% endfor %}

      </div>
    </div>

  </div>
</section>

<script>
  const searchInput = document.getElementById('searchInput');
  const companyFilter = document.getElementById('companyFilter');
  const contractFilter = document.getElementById('contractFilter');
  const filterBtn = document.getElementById('filterBtn');
  const offersContainer = document.getElementById('offersContainer');
  
  let debounceTimer;

  // Real-time search with debouncing
  searchInput.addEventListener('input', function() {
    clearTimeout(debounceTimer);
    debounceTimer = setTimeout(() => {
      performSearch();
    }, 300); // 300ms delay
  });

  // Filter button click
  filterBtn.addEventListener('click', performSearch);

  // Enter key on search input
  searchInput.addEventListener('keypress', function(e) {
    if (e.key === 'Enter') {
      performSearch();
    }
  });

  async function performSearch() {
    const searchQuery = searchInput.value;
    const company = companyFilter.value;
    const contract = contractFilter.value;

    try {
      const params = new URLSearchParams();
      if (searchQuery) params.append('search', searchQuery);
      if (company) params.append('company_id', company);
      if (contract) params.append('contract_type', contract);

      const response = await fetch(`/annonces/filter?${params.toString()}`);
      const offers = await response.json();

      // Clear and rebuild the grid
      offersContainer.innerHTML = '';

      if (offers.length === 0) {
        offersContainer.innerHTML = `
          <div class="col-span-2 text-center py-12 text-gray-500">
            <p class="text-lg">üì≠ Aucune offre ne correspond √† vos crit√®res</p>
          </div>
        `;
        return;
      }

      offers.forEach(offer => {
        const description = offer.description.length > 100 
          ? offer.description.substring(0, 100) + '...' 
          : offer.description;

        const offerHTML = `
          <div class="bg-white rounded-2xl p-6 shadow border hover:shadow-xl transition">
            <span class="text-xs bg-indigo-100 text-indigo-600 px-3 py-1 rounded-full">
              ${offer.type_contrat}
            </span>
            <h3 class="text-lg font-bold mt-3">${offer.titre}</h3>
            <p class="text-sm text-gray-500">${offer.entreprise_nom}</p>
            <p class="mt-3 text-sm text-gray-600">${description}</p>
            <a href="/annonces/show/${offer.id}" class="inline-block mt-4 text-indigo-600 font-semibold">
              Voir d√©tails ‚Üí
            </a>
          </div>
        `;

        offersContainer.innerHTML += offerHTML;
      });
    } catch (error) {
      console.error('Erreur lors de la recherche:', error);
    }
  }
</script>

{% endblock %}
