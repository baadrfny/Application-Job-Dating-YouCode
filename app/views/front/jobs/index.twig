{% extends "layouts/main.twig" %}

{% block title %}Explore Job Offers{% endblock %}

{% block content %}
<div class="container py-5">
    <header class="text-center mb-5">
        <h1 class="display-5 fw-bold text-primary">Find Your Next Opportunity</h1>
        <p class="text-muted">Explore the latest job dating offers from YouCode partners</p>
    </header>

    <div class="row mb-4">
        <div class="col-md-8 mx-auto">
            <div class="card border-0 shadow-sm p-3">
                <form action="/annonces/filter" method="GET" class="row g-2">
                    <div class="col-md-5">
                        <select name="company_id" class="form-select border-0 bg-light">
                            <option value="">All Companies</option>
                            {% for company in companies %}
                                <option value="{{ company.id }}">{{ company.nom }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-5">
                        <select name="contract_type" class="form-select border-0 bg-light">
                            <option value="">Contract Type</option>
                            <option value="CDI">CDI</option>
                            <option value="CDD">CDD</option>
                            <option value="Stage">Internship</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">Filter</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="row g-4">
        {% for offer in offers %}
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm hover-shadow transition">
                {% if offer.image %}
                    <img src="{{ offer.image }}" class="card-img-top" alt="{{ offer.titre }}" style="height: 200px; object-fit: cover;">
                {% endif %}
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <span class="badge bg-soft-primary text-primary">{{ offer.type_contrat }}</span>
                        <small class="text-muted"><i class="far fa-calendar-alt"></i> {{ offer.created_at|date("M d, Y") }}</small>
                    </div>
                    <h5 class="card-title fw-bold">{{ offer.titre }}</h5>
                    <p class="text-secondary mb-1">
                        <i class="fas fa-building me-1"></i> {{ offer.entreprise_nom }}
                    </p>
                    <p class="text-muted small">
                        <i class="fas fa-map-marker-alt me-1"></i> {{ offer.localisation }}
                    </p>
                    <p class="card-text text-truncate-2 text-muted">
                        {{ offer.description|slice(0, 100) }}...
                    </p>
                </div>
                <div class="card-footer bg-white border-0 pb-3">
                    <a href="/annonces/show/{{ offer.id }}" class="btn btn-outline-primary w-100 fw-bold">View Details</a>
                </div>
            </div>
        </div>
        {% else %}
        <div class="col-12 text-center py-5">
            <img src="https://cdn-icons-png.flaticon.com/512/7486/7486744.png" width="100" class="mb-3 opacity-50">
            <h4 class="text-muted">No offers available at the moment.</h4>
        </div>
        {% endfor %}
    </div>
</div>

<style>
    .bg-soft-primary { background-color: rgba(79, 60, 247, 0.1); }
    .hover-shadow:hover { transform: translateY(-5px); box-shadow: 0 1rem 3rem rgba(0,0,0,.1) !important; }
    .transition { transition: all 0.3s ease; }
    .text-truncate-2 { display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }
</style>
{% endblock %}