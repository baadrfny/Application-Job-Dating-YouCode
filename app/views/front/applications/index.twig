{% extends "layouts/front.twig" %}

{% block content %}
    <section class="hero">
        <h1>Mes candidatures</h1>
        <p>{{ applications|length }} candidature(s)</p>
    </section>

    {% if message %}
        <div class="panel" style="margin-bottom: 18px;">
            <div class="muted">{{ message }}</div>
        </div>
    {% endif %}

    <div class="table-card">
        <table class="table">
            <thead>
                <tr>
                    <th>Offre</th>
                    <th>Entreprise</th>
                    <th>Date</th>
                    <th>Statut</th>
                </tr>
            </thead>
            <tbody>
                {% for application in applications %}
                    <tr>
                        <td>{{ application.titre }}</td>
                        <td>{{ application.entreprise_nom }}</td>
                        <td>{{ application.created_at|date("d/m/Y") }}</td>
                        <td>
                            {% if application.status == 'accepted' %}
                                <span class="badge">Acceptee</span>
                            {% elseif application.status == 'rejected' %}
                                <span class="badge">Refusee</span>
                            {% else %}
                                <span class="badge">En attente</span>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="muted">Aucune candidature.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
